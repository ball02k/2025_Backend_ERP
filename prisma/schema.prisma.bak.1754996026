generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums
enum ProjectStatus { DRAFT ACTIVE ON_HOLD COMPLETED CANCELLED }
enum ContractType { JCT NEC4 OTHER }
enum WorkStage { RIBA_0 RIBA_1 RIBA_2 RIBA_3 RIBA_4 RIBA_5 RIBA_6 RIBA_7 }

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Client {
  id        String   @id @default(cuid())
  name      String
  regNo     String?
  vatNo     String?
  address1  String?
  address2  String?
  city      String?
  postcode  String?
  country   String? @default("UK")
  phone     String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  Project[]
  contacts  Contact[]
}

model Contact {
  id        String   @id @default(cuid())
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  name      String
  title     String?
  email     String?
  phone     String?
  primary   Boolean  @default(false)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String        @id @default(cuid())
  code          String        @unique
  name          String
  clientId      String
  client        Client        @relation(fields: [clientId], references: [id])
  status        ProjectStatus @default(DRAFT)
  type          String?
  contractType  ContractType? @default(OTHER)
  workStage     WorkStage?    @default(RIBA_0)
  address1      String?
  address2      String?
  city          String?
  postcode      String?
  startDate     DateTime?
  endDate       DateTime?
  budgetGBP     Decimal?      @db.Decimal(18,2)
  retentionPct  Decimal?      @db.Decimal(5,2)
  cisApplicable Boolean       @default(false)
  riskLevel     String?
  carbonTarget  String?
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  tasks         Task[]
  variations    Variation[]
  documents     Document[]
}

model Task {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  title       String
  description String?
  assigneeId  String?
  assignee    User?    @relation(fields: [assigneeId], references: [id])
  priority    String?
  status      String
  startDate   DateTime?
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Variation {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  title       String
  description String?
  amountGBP   Decimal  @db.Decimal(18,2)
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id        String   @id @default(cuid())
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
  name      String
  url       String
  kind      String?
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  entity    String
  entityId  String
  action    String
  diff      Json?
  at        DateTime @default(now())
}
