generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums removed ---

// --- Models ---
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Client {
  id        String     @id @default(cuid())
  name      String
  regNo     String?
  vatNo     String?
  address1  String?
  address2  String?
  city      String?
  postcode  String?
  country   String?    @default("UK")
  phone     String?
  website   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  projects  Project[]
  contacts  Contact[]
  documents Document[]
}

model Contact {
  id        String   @id @default(cuid())
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  name      String
  title     String?
  email     String?
  phone     String?
  primary   Boolean  @default(false)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String      @id @default(cuid())
  code          String      @unique
  name          String
  clientId      String
  client        Client      @relation(fields: [clientId], references: [id])
  // enums removed -> plain strings with defaults
  status        String      @default("DRAFT") @db.VarChar(24)
  type          String?
  contractType  String?     @default("OTHER") @db.VarChar(24)
  workStage     String?     @default("RIBA_0") @db.VarChar(24)
  address1      String?
  address2      String?
  city          String?
  postcode      String?
  startDate     DateTime?
  endDate       DateTime?
  budgetGBP     Decimal?    @db.Decimal(18, 2)
  retentionPct  Decimal?    @db.Decimal(5, 2)
  cisApplicable Boolean     @default(false)
  riskLevel     String?
  carbonTarget  String?
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  tasks         Task[]
  variations    Variation[]
  documents     Document[]
}

model Task {
  id          String    @id @default(cuid())
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
  title       String
  description String?
  assigneeId  String?
  assignee    User?     @relation(fields: [assigneeId], references: [id])
  priority    String?
  status      String
  startDate   DateTime?
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Variation {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  title       String
  description String?
  amountGBP   Decimal  @db.Decimal(18, 2)
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id        String   @id @default(cuid())
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
  name      String
  url       String
  kind      String?
  createdAt DateTime @default(now())
}

model AuditLog {
  id       String   @id @default(cuid())
  actorId  String?
  entity   String
  entityId String
  action   String
  diff     Json?
  at       DateTime @default(now())
}
